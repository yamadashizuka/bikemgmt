<div class="page-header">
  <h1><%= t('views.itemtype.index') %></h1>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Limitdistance</th>
      <th>Memo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @itemtypes.each do |itemtype| %>
      <tr>
        <td><%= itemtype.name %></td>
        <td><%= itemtype.limitdistance %></td>
        <td><%= itemtype.memo %></td>
        <td><%= link_to 'Show', itemtype %></td>
        <td><%= link_to 'Edit', edit_itemtype_path(itemtype) %></td>
        <td><%= link_to 'Destroy', itemtype, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Itemtype', new_itemtype_path %>
