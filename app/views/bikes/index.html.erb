<h1><%= t('views.bikes.index') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.bike.nickname') %></th>
      <th><%= t('activerecord.attributes.bike.type') %></th>
      <th><%= t('activerecord.attributes.bike.memo') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.nickname %></td>
        <td><%= bike.type %></td>
        <td><%= bike.memo %></td>
        <td><%= link_to 'Show', bike %></td>
        <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
        <td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bike', new_bike_path %>
