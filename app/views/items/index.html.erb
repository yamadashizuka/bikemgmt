<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Itemtype</th>
      <th>Nickname</th>
      <th>Distance</th>
      <th>Memo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.itemtype %></td>
        <td><%= item.nickname %></td>
        <td><%= item.distance %></td>
        <td><%= item.memo %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
